import requests
import tkinter as tk
from tkinter import messagebox

# Replace with your actual API key
API_KEY = "your_api_key_here"
BASE_URL = "https://api.openweathermap.org/data/2.5/weather"

def get_weather():
    city = city_entry.get().strip()
    if not city:
        messagebox.showwarning("Input Error", "Please enter a city name.")
        return

    url = f"{BASE_URL}?q={city}&appid={"6231526829a4ec37b9c1d3e72487dc2b"}&units=metric"
    try:
        response = requests.get(url)
        if response.status_code == 200:
            data = response.json()
            temp = data["main"]["temp"]
            condition = data["weather"][0]["description"]
            humidity = data["main"]["humidity"]

            result = f"üå° Temperature: {temp}¬∞C\n‚òÅÔ∏è Condition: {condition.title()}\nüíß Humidity: {humidity}%"
            result_label.config(text=result)
        elif response.status_code == 401:
            result_label.config(text="‚ùå Invalid API key.")
        else:
            result_label.config(text="‚ùå City not found.")
    except Exception as e:
        result_label.config(text=f"Error: {e}")

# Set up GUI
root = tk.Tk()
root.title("Weather App")
root.geometry("900x750")

# City Entry
tk.Label(root, text="Enter City:", font=("Arial", 12)).pack(pady=10)
city_entry = tk.Entry(root, font=("Arial", 12))
city_entry.pack()

# Search Button
tk.Button(root, text="Get Weather", command=get_weather, font=("Arial", 12)).pack(pady=10)

# Result Label
result_label = tk.Label(root, text="", font=("Arial", 12), justify="left")
result_label.pack(pady=10)

# Run the app
root.mainloop()
